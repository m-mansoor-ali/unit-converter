{
  "entrypoint": "index.html",
  "shell": "src/unit-converter-app/unit-converter-app.html",
  "sources": [
    "src/**/*",
    "data/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/webcomponents-lite.js"
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ],
    "ignoreWarnings": []
  },
  "builds": [
    {
      "preset": "es5-bundled",
      "js": {
        "minify": true,
        "compile": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": false,
      "addPushManifest": false
    }
  ]
}